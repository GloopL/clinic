# BSU Clinic - Apache Configuration
# Simplified version for Hostinger compatibility

# Set default directory index (this makes root URL load index.php)
DirectoryIndex index.php index.html

# Prevent directory listing
Options -Indexes

# Enable Rewrite Engine (only if mod_rewrite is available)
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    
    # Serve index.php for root URL
    RewriteCond %{REQUEST_URI} ^/$
    RewriteRule ^$ index.php [L]
</IfModule>

